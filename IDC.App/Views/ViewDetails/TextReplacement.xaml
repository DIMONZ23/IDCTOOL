<UserControl x:Class="IDC.App.Views.ViewDetails.TextReplacement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IDC.App.Views.ViewDetails"
             mc:Ignorable="d" 
             d:DesignHeight="384" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Find" VerticalAlignment="Top" Margin="182,131,-162,0"/>
        <TextBox Text="{Binding FindText, UpdateSourceTrigger=PropertyChanged}" Margin="300,129,300,0" VerticalAlignment="Top" Width="200"/>
        <TextBlock Text="Replace with" VerticalAlignment="Top" Margin="182,192,-172,0"/>
        <TextBox Text="{Binding ReplacementText, UpdateSourceTrigger=PropertyChanged}" Margin="300,190,300,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="300,264,0,0" VerticalAlignment="Top" Width="74" Background="LightBlue"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="426,264,0,0" VerticalAlignment="Top" Width="74" Background="LightYellow"/>
    </Grid>
</UserControl>
